{{!
    @template block_emergency_alerts/content

    Emergency alert block content template.
    
    Example context (json):                                                                                                         
    {
        "instanceid": "86",
        "alerts": [
            { "type": "danger", "message": "..." },
            { "type": "warning", "message": "..." }
        ]
    }
}}
<div class="block_emergency_alerts" data-region="block_emergency_alerts-instance-{{instanceid}}" data-numalerts="{{numalerts}}">
    {{#alerts}}
        <div class="alert {{#type}}alert-{{.}}{{/type}}" role="alert">{{{message}}}</div>
    {{/alerts}}
</div>